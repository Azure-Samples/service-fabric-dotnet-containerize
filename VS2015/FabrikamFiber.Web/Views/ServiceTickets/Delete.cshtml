@model FabrikamFiber.DAL.Models.ServiceTicket

@{
    ViewBag.Title = "Delete";
}

<h1>Delete</h1>

<h2>Are you sure you want to delete this?</h2>

<fieldset>
    <legend>ServiceTicket</legend>

    <div class="display-label">Description</div>
    <div class="display-field">@Html.Raw(@Model.Description)</div>

    <div class="display-label">Opened</div>
    <div class="display-field">@String.Format("{0:g}", Model.Opened)</div>

    <div class="display-label">Closed</div>
    <div class="display-field">@String.Format("{0:g}", Model.Closed)</div>

    <div class="display-label">Customer</div>
    <div class="display-field">@(Model.Customer == null ? "None" : Model.Customer.LastName)</div>

    <div class="display-label">CreatedBy</div>
    <div class="display-field">@(Model.CreatedBy == null ? "None" : Model.CreatedBy.LastName)</div>

    <div class="display-label">AssignedTo</div>
    <div class="display-field">@(Model.AssignedTo == null ? "None" : Model.AssignedTo.LastName)</div>

    <div class="display-label">Log</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Log).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" class="glossyBox" />
       
    </p>
    <p>
     @Html.ActionLink("Back to List", "Index")
     </p>
}


